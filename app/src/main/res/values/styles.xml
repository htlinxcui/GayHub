<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:icon">@color/colorIcons</item>
        <item name="android:divider">@color/colorDivider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextHintStyle">
        <item name="android:textSize">@dimen/dimen_text_hint</item>
        <item name="android:textColor">@color/textWhiteColorHintOrDisable</item>
    </style>

    <style name="TextHintOverflowStyle">
        <item name="android:textSize">@dimen/dimen_text_hint</item>
        <item name="android:textColor">@color/colorErr</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/colorWhitePrimary</item>
        <item name="cardElevation">@dimen/dimen_4</item>
        <item name="contentPadding">@dimen/dimen_16</item>
    </style>

    <style name="CardViewNoRLPaddingStyle" parent="CardView.Light">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/colorWhitePrimary</item>
        <item name="cardElevation">@dimen/dimen_4</item>
        <item name="contentPaddingTop">@dimen/dimen_16</item>
        <item name="contentPaddingBottom">@dimen/dimen_16</item>
    </style>

    <style name="TextLargeStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextMediumStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextBodyStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextSmallStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
    </style>
</resources>
