<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_octoface"
            android:layout_width="@dimen/dimen_56"
            android:layout_height="@dimen/dimen_56" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_36"
            android:elevation="2dp"
            android:hint="@string/text_hint_username"
            app:counterEnabled="true"
            app:counterMaxLength="39"
            app:counterOverflowTextAppearance="@style/TextHintOverflowStyle"
            app:counterTextAppearance="@style/TextHintStyle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_hint_username"
                android:singleLine="true"
                android:textColorHint="@color/textWhiteColorHintOrDisable" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:hint="@string/text_hint_password"
            app:counterEnabled="true"
            app:counterMaxLength="72"
            app:counterOverflowTextAppearance="@style/TextHintOverflowStyle"
            app:counterTextAppearance="@style/TextHintStyle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_hint_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/textWhiteColorHintOrDisable" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/text_login"
            android:textColor="@color/textWhiteColorOrdinary"
            android:textSize="@dimen/dimen_text_subtitle" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>