<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSecondary"
    android:paddingBottom="@dimen/dimen_16"
    android:paddingTop="@dimen/dimen_16">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_user_general"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_user_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:src="@drawable/ic_dynamic_user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_toRightOf="@id/iv_portrait"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nickname"
                        style="@style/TextLargeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="htlinsmli" />

                    <TextView
                        android:id="@+id/tv_username"
                        style="@style/TextMediumStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="stillcoding" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_introduce"
                style="@style/TextBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_main"
                android:layout_marginTop="@dimen/dimen_16"
                android:ellipsize="end"
                android:lines="3"
                android:text="啊还是减肥的简简单单就单家独户翻江倒海恢复肌肤好的机会风华绝代个很好的风华绝代佛教基督教的绝地反击打飞机打飞机好的发挥的好倒海翻江的积分兑换哈对方很好的发挥的好对方很好的护肤好的发的护肤好的护肤好的好对方很好很好的护肤好的发挥的护肤好的发挥的护肤好的" />

            <View
                android:id="@+id/view_divider"
                style="@style/DividerStyle"
                android:layout_below="@id/tv_introduce" />

            <TextView
                android:id="@+id/tv_company"
                style="@style/TextSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divider"
                android:drawableLeft="@drawable/ic_corp_black_24dp"
                android:drawablePadding="@dimen/dimen_4"
                android:maxEms="6"
                android:singleLine="true"
                android:text="锐捷网络" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/TextSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divider"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_toRightOf="@id/tv_company"
                android:drawableLeft="@drawable/ic_location_black_24dp"
                android:drawablePadding="@dimen/dimen_4"
                android:maxEms="7"
                android:singleLine="true"
                android:text="中国，上海" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/TextSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/view_divider"
                android:layout_below="@id/view_divider"
                android:drawableLeft="@drawable/ic_email_black_24dp" />

            <TextView
                android:id="@+id/tv_link"
                style="@style/TextSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divider"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_toLeftOf="@id/tv_email"
                android:drawableLeft="@drawable/ic_link_black_24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_user_main"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_user_general">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_repository"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_assignment_black_24dp" />

            <ImageView
                android:id="@+id/btn_follower"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_follower_black_24dp" />

            <ImageView
                android:id="@+id/btn_following"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_following_black_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardViewNoRLPaddingStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_user_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_8"
                android:drawableLeft="@drawable/ic_user_starred_black_24dp"
                android:drawablePadding="@dimen/dimen_24"
                android:text="喜欢过的" />

            <View style="@style/DividerStyle" />

            <TextView
                style="@style/TextBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_8"
                android:drawableLeft="@drawable/ic_user_event_black_24dp"
                android:drawablePadding="@dimen/dimen_24"
                android:text="消息中心" />

            <View style="@style/DividerStyle" />

            <TextView
                style="@style/TextBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_8"
                android:drawableLeft="@drawable/ic_user_label_offer_black_24dp"
                android:drawablePadding="@dimen/dimen_24"
                android:text="标签管理" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>